---
import Home from '@/icons/Home.astro'
import Library from '@/icons/Library.astro'
import Search from '@/icons/Search.astro'
import SideMenuItem from '@/components/astro/SideMenuItem.astro'

import { playlists } from '@/lib/data'
import SideMenuCard from './SideMenuCard.astro'
---

<nav class='flex flex-col flex-1 gap-2'>
  <div class='bg-zinc-900 rounded-lg p-2'>
    <ul>
      <SideMenuItem href='/'>
        <Home />
        Inicio
      </SideMenuItem>

      <SideMenuItem href='/search'>
        <Search />
        Buscar
      </SideMenuItem>
    </ul>
  </div>

  <div class='bg-zinc-900 rounded-lg p-2 flex-1 hidden sm:flex'>
    <ul>
      <SideMenuItem href='/'>
        <Library />
        Tu biblioteca
      </SideMenuItem>

      {playlists.map((playlist) => <SideMenuCard playlist={playlist} />)}
    </ul>
  </div>
</nav>
